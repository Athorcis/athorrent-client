{
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": 4,
        "at-rule-empty-line-before": null,
        "at-rule-no-unknown": [true, {
            "ignoreAtRules": ["each"]
        }],
        "selector-list-comma-newline-after": "always-multi-line",
        "selector-pseudo-element-colon-notation": null
    }
}
