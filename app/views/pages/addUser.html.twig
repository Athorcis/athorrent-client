{% extends 'skeleton.html.twig' %}

{% block title %}{{ 'users.add.title'|trans }} - {{ 'app.name'|trans }}{% endblock %}

{% block css %}
{{ css('css/main')|raw }}
{% endblock %}

{% block content %}
<div class="page-header">
    <h1>{{ 'users.add.title'|trans }}</h1>
</div>
{% if error is not empty %}
    <div class="alert alert-danger" role="alert">{{ error|trans }}</div>
{% endif %}
<form method="post" action="{{ path('saveUser') }}" class="form-horizontal">
    <div class="form-group">
        <label for="username" class="col-sm-2 control-label">{{ 'users.username'|trans }}</label>
        <div class="col-sm-10">
            <input type="text" name="username" class="form-control" id="username" placeholder="{{ 'users.username'|trans }}" />
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-sm-2 control-label">{{ 'users.password'|trans }}</label>
        <div class="col-sm-10">
            <input type="password" name="password" class="form-control" id="password" placeholder="{{ 'users.password'|trans }}" />
        </div>
    </div>
    <div class="form-group">
        <label for="role" class="col-sm-2 control-label">{{ 'users.role'|trans }}</label>
        <div class="col-sm-10">
            <select name="role" class="form-control" id="role">
                {% for role in roleList %}
                    <option value="{{ role }}">{{ role|trans }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">{{ 'users.add.submit'|trans }}</button>
        </div>
    </div>
</form>
{% endblock %}
